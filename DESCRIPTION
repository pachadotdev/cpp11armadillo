    person(
        given = "Mauricio",
        family = "Vargas Sepulveda",
        role = c("aut", "cre"),
        email = "m.sepulveda@mail.utoronto.ca",
        comment = c(ORCID = "0000-0003-1017-7574")),
    person(
        given = "Jonathan",
        family = "Schneider Malamud",
        role = c("ctb"))
    )
